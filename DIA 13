# Pide una palabra y te devuelve sus letras
def deletreo():
    palabra=input("Dime un palabra: ")
    seguir=True
    cont=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        
deletreo()


# Pide una palabra y te devuelve sus letras y su longitud
def deletreo():
    palabra=input("Dime un palabra: ")
    seguir=True
    cont=0
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
    print("Tiene "+str(cont)+" letras")
        
deletreo()


# Pide una palabra y te devuelve sus letras y longitud. Me dice cuantas vocales tiene
def esVocal(letra):
    respuesta=False
    if(letra=='a' or letra=='e' or letra=='i' or letra=='o' or letra=='u'):
        respuesta=True
    return(respuesta)
def deletreo():
    palabra=input("Dime un palabra: ")
    cuentavocales=0
    seguir=True
    for cont in range(0,len(palabra)):
        print(palabra[cont]+ ' ')
        if(esVocal(palabra[cont])==True):
            cuentavocales=cuentavocales+1
    print("Tiene "+str(cuentavocales) +" vocales")
        
deletreo()
