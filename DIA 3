# Pide 2 numeros y haz la media
def calcula_media():
    #inicializo las variables
    n1=0
    n2=0
    n1=int(input("numero 1: "))
    n2=int(input("numero 2: "))
    suma=n1+n2
    media=suma/2
    print(media)
    
calcula_media()

# Suma los 10 primeros numeros
def sumar_numeros():
    n1=1
    n2=2
    n3=3
    n4=4
    n5=5
    n6=6
    n7=7
    n8=8
    n9=9
    n10=10
    suma=n1+n2+n3+n4+n5+n6+n7+n8+n9+n10
    print(suma)
    
sumar_numeros()
